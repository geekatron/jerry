{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "version": "1.0",
  "project": {
    "name": "jerry",
    "description": "Framework for behavior and workflow guardrails with knowledge accrual"
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "python3 .claude/hooks/pre_tool_use.py",
            "timeout": 5000
          }
        ]
      }
    ],
    "SubagentStop": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "python3 .claude/hooks/subagent_stop.py",
            "timeout": 5000
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": ".venv/bin/jerry-session-start",
            "timeout": 10000
          }
        ]
      }
    ]
  },
  "rules": {
    "files": [
      ".claude/rules/coding-standards.md"
    ],
    "always_apply": true
  },
  "agents": {
    "default": "orchestrator",
    "available": [
      {
        "name": "orchestrator",
        "file": ".claude/agents/orchestrator.md",
        "description": "Task decomposition and coordination",
        "recommended_model": "opus-4-5"
      },
      {
        "name": "qa-engineer",
        "file": ".claude/agents/qa-engineer.md",
        "description": "Test design and quality assurance",
        "recommended_model": "sonnet"
      },
      {
        "name": "security-auditor",
        "file": ".claude/agents/security-auditor.md",
        "description": "Security review and vulnerability assessment",
        "recommended_model": "sonnet"
      }
    ]
  },
  "commands": {
    "available": [
      {
        "name": "architect",
        "file": ".claude/commands/architect.md",
        "description": "Create PLAN.md in active project (requires JERRY_PROJECT)"
      },
      {
        "name": "release",
        "file": ".claude/commands/release.md",
        "description": "Prepare release and CI/CD handoff"
      }
    ]
  },
  "permissions": {
    "allowed_tools": [
      "Read",
      "Write",
      "Edit",
      "MultiEdit",
      "Glob",
      "Grep",
      "Bash",
      "Task",
      "TodoWrite",
      "WebSearch",
      "WebFetch"
    ],
    "require_approval": [
      "Bash:rm",
      "Bash:git push",
      "Write:.env"
    ]
  },
  "context": {
    "always_load": [
      "CLAUDE.md",
      "AGENTS.md",
      "GOVERNANCE.md"
    ],
    "load_on_demand": [
      "projects/README.md",
      "projects/*/PLAN.md",
      "projects/*/WORKTRACKER.md"
    ]
  },
  "preferences": {
    "model": {
      "default": "opus-4-5",
      "fast_tasks": "sonnet"
    },
    "output": {
      "max_line_length": 100,
      "prefer_markdown": true
    },
    "behavior": {
      "require_plan_for_multi_file": true,
      "require_citations": true,
      "capture_learnings": true
    }
  },
  "statusLine": {
    "type": "command",
    "command": "python3 ~/.claude/statusline.py",
    "padding": 0
  }
}
